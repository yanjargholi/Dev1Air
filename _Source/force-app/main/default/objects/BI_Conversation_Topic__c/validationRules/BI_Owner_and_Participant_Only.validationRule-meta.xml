<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BI_Owner_and_Participant_Only</fullName>
    <active>true</active>
    <errorConditionFormula>($User.Id   &lt;&gt;  BI_One_on_One_Owner_Id__c)  &amp;&amp;  ($User.Id  &lt;&gt;  BI_Participant_ID__c)  &amp;&amp; $Profile.Name &lt;&gt; &apos;System Administrator&apos;</errorConditionFormula>
